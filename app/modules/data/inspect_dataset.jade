// Datasets
div(ng-if='dataset', flex)
  md-card.dataset-preview.flat.no-border(ng-if='dataset.details.sample', layout='column', flex)
    md-card-content
      h2.md-title
        | {{dataset.title}}
      .dataset-spreadsheet
      table(data='dataset.details.sample', selector="'.dataset-spreadsheet'", headers='dataset.details.column_attrs')

  // Lower Section
  // Structure Specification
  div(layout='row')
    md-card.dataset-structure-select.flat(flex)
      md-card-content
        h2.md-title Dataset Structure
        md-radio-group(ng-model='dataset.details.structure')
          md-radio-button.md-primary(ng-repeat='s in structures', value='{{s.name}}') {{s.displayName}}

  // Dataset Modification
  md-card.dataset-delete-select.flat(flex)
    md-card-content
      h2.md-title Modify Dataset
      section(layout='row', layout-align='center center')
        md-button.md-light.md-warn.md-raised(aria-label='button', ng-click='removeDataset(dataset.dID)') Delete Dataset
