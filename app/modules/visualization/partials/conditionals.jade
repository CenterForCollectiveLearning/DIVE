fieldset.standard
  legend Conditionals
  .checkboxes
    div(layout='row', layout-wrap='')
      div(flex='50', ng-repeat='c in condList track by c.name')
        md-checkbox(ng-model='selConds[currentdID][c.name]', ng-value='c.name', ng-change='selectConditional(c)')
          | {{c.name}}

  .dropdowns(ng-if='selConds[currentdID]')
    ul.dropdowns
      li(ng-repeat='(title, showing) in selConds[currentdID]', layout-align='center start', ng-if='showing')
        label.dropdown-label {{title}}
        md-progress-linear(md-mode='indeterminate', ng-if='!condData[title]')
        md-select(ng-init='selCondVals[currentdID][title]=condData[title][0]', ng-if='condData[title]', ng-model='selCondVals[currentdID][title]', ng-change='refreshVizData()')
          md-option(ng-repeat='d in condData[title]') {{d}}
